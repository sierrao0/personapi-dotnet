@{
    ViewData["Title"] = "Inicio - Persona API";
}

<div class="container mt-5">
    <div class="text-center">
        <h1 class="display-4">Sistema de Gestión Personas</h1>
        <p class="lead">Seleccione una opción para administrar los diferentes módulos</p>

        <div class="row mt-4">
            <div class="col-md-3 mb-4">
                <a href="/Personas" class="btn btn-primary btn-lg btn-block p-4">
                    <i class="fas fa-users fa-2x mb-2"></i><br>
                    Personas
                </a>
            </div>

            <div class="col-md-3 mb-4">
                <a href="/Profesiones" class="btn btn-success btn-lg btn-block p-4">
                    <i class="fas fa-briefcase fa-2x mb-2"></i><br>
                    Profesiones
                </a>
            </div>

            <div class="col-md-3 mb-4">
                <a href="/Estudios" class="btn btn-info btn-lg btn-block p-4">
                    <i class="fas fa-graduation-cap fa-2x mb-2"></i><br>
                    Estudios
                </a>
            </div>

            <div class="col-md-3 mb-4">
                <a href="/Telefonos" class="btn btn-warning btn-lg btn-block p-4">
                    <i class="fas fa-phone-alt fa-2x mb-2"></i><br>
                    Teléfonos
                </a>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .btn-block {
            height: 120px;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            transition: transform 0.3s;
        }
        .btn-block:hover {
            transform: scale(1.05);
            text-decoration: none;
        }
    </style>
}

@section Scripts {
    <!-- Font Awesome para los iconos -->
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
}